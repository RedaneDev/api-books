{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
    <a href="{{ path('admin') }}" class="mt-5 btn btn-secondary">Retour Dashboard</a>
        <h1 class="mt-5 h3 mb-3 font-weight-normal">Créer un compte</h1>

        {% if not registrationForm.vars.valid %}
            <div class="alert alert-danger mb-3 w-50" role="alert">
                <strong> {{ form_errors(registrationForm.email) }}</strong>
                <strong> {{ form_errors(registrationForm.plainPassword) }}</strong>
            </div>
        {% endif %}
        
        {{ form_start(registrationForm) }}
            <div class="mb-3">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email) }}
            </div>
            <div class="mb-3">
                {{ form_label(registrationForm.plainPassword) }}
                {{ form_widget(registrationForm.plainPassword) }}
            </div>
            <div class="mb-3">
                {{ form_label(registrationForm.agreeTerms) }}
                {{ form_widget(registrationForm.agreeTerms) }}
            </div>
            <div class="d-flex gap-3">
                <button class="btn btn-primary" type="submit">
                    Créer mon compte
                </button>
                <a href="{{ path('app_login') }}" class="btn btn-primary" type="submit">
                    Déja un compte ?
                </a>
            </div>


        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
